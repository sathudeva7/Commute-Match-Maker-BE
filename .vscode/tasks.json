{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test: User Service",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:user-service"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Test: Chat Service",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:chat-service"],
      "group": "test"
    },
    {
      "label": "Test: Current File",
      "type": "shell",
      "command": "npx",
      "args": ["jest", "${relativeFile}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Test: Current File (Watch)",
      "type": "shell",
      "command": "npx",
      "args": ["jest", "${relativeFile}", "--watch"],
      "group": "test",
      "isBackground": true
    }
  ]
}